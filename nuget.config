<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <packageSources>
        <clear />
        <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
        <add key="metaphor" value="https://pkgs.dev.azure.com/metaphorltd/Red/_packaging/Red/nuget/v3/index.json" />
    </packageSources>
    <packageSourceMapping>
        <!-- key value for <packageSource> should match key values from <packageSources> element -->
        <packageSource key="nuget.org">
            <package pattern="*" />
        </packageSource>
        <packageSource key="metaphor">
            <package pattern="Metaphor.*" />
        </packageSource>
    </packageSourceMapping>
</configuration>