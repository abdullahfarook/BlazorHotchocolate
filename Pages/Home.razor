@page "/"

<PageTitle>Home</PageTitle>
<UseGetDealers Context="result">
    <ChildContent>
        @{
            var data = result.Dealers!.Nodes;
        }
        @if (data!.Any())
        {
            <ul>
                @foreach (var item in result.Dealers!.Nodes!)
                {
                    <li>@item.Name (@item.Id)</li>
                }
            </ul>
        }
        else
        {
            <p>No data</p>
        }
       
    </ChildContent>
    <ErrorContent>
        Something went wrong ...<br />
        @result.First().Message
    </ErrorContent>
    <LoadingContent>
        Loading ...
    </LoadingContent>
</UseGetDealers>